<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="28sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@android:drawable/sym_def_app_icon"
            android:scaleType="centerCrop"
            android:background="#EEEEEE"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joshua"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cvProfileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/statsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:background="@drawable/bg_card_goals"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65kg"
                android:textColor="#1A1B2F"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="#8F90A6"
                android:textSize="12sp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#D1D1D6"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180cm"
                android:textColor="#1A1B2F"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="#8F90A6"
                android:textSize="12sp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#D1D1D6"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19"
                android:textColor="#1A1B2F"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="#8F90A6"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/statsRow">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Account Information"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_card_goals"
            android:drawableStart="@android:drawable/ic_menu_edit"
            android:drawablePadding="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:gravity="start|center_vertical"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            app:drawableTint="#000000"/>

        <LinearLayout
            android:id="@+id/rowNotifications"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/bg_card_clickable"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pop-up Notifications"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:trackTint="#2ECC71" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSettings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Help"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_card_clickable"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAllCaps="false"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableTint="#8F90A6"
            android:layout_marginBottom="12dp"
            android:stateListAnimator="@null"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPrivacy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="About App"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_card_clickable"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAllCaps="false"
            android:drawableEnd="@android:drawable/arrow_down_float"
            android:drawableTint="#8F90A6"
            android:layout_marginBottom="12dp"
            android:stateListAnimator="@null"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Log Out"
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bg_card_goals"
            android:backgroundTint="#FFF0F0"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"
            android:stateListAnimator="@null"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>