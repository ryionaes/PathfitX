<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        android:fontFamily="@font/roboto_medium"
        android:text="About"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text=" You"
        android:textColor="@color/prim_red"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/textView"
        app:layout_constraintTop_toTopOf="@id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/pb_full"
        android:adjustViewBounds="true"
        android:contentDescription="Progress Bar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Just a few more questions. ğŸ˜…"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    ---

    ## ğŸ“ Height Input Section (ft/in)

    <TextView
        android:id="@+id/textView4_height_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_semibold"
        android:text="How tall are you?"
        android:textColor="@color/gray_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <EditText
        android:id="@+id/edit_text_feet"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_edittext_selector"
        android:ems="10"
        android:inputType="numberDecimal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/edit_text_inches"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4_height_label" />

    <EditText
        android:id="@+id/edit_text_inches"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_edittext_selector"
        android:ems="10"
        android:inputType="numberDecimal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/button_ft_in"
        app:layout_constraintStart_toEndOf="@+id/edit_text_feet"
        app:layout_constraintTop_toTopOf="@+id/edit_text_feet" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_ft_in"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:minWidth="90dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_semibold"
        android:text="ft/in"
        android:textColor="@color/prim_red"
        android:textSize="16sp"

        app:cornerRadius="10dp"

        app:rippleColor="@color/prim_red"

        app:backgroundTint="#FEEAEA"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edit_text_inches"
        app:layout_constraintTop_toTopOf="@+id/edit_text_feet"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_feet" />

    ---

    ## âš–ï¸ Weight Input Section (kg)

    <TextView
        android:id="@+id/textView5_weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_semibold"
        android:text="How much do you weigh?"
        android:textColor="@color/gray_400"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_feet" />

    <EditText
        android:id="@+id/edit_text_weight"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_edittext_selector"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Select country"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/button_kg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5_weight_label" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_kg"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:minWidth="90dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_semibold"
        android:text="kg"
        android:textColor="@color/prim_red"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:rippleColor="@color/prim_red"
        app:backgroundTint="#FEEAEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_text_weight"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_weight" />

    <TextView
        android:id="@+id/text_view_estimate_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="It's OK to estimate, you can update later."
        android:textColor="@color/gray_400"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_weight" />

    ---

    ## â¡ï¸ Footer Buttons

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_backbutton"
        android:contentDescription="@string/back_button_desc"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/prim_red" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/prim_red"
        android:fontFamily="@font/roboto_semibold"
        android:text="@string/button_next"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backButton"
        app:layout_constraintTop_toTopOf="@+id/backButton" />

</androidx.constraintlayout.widget.ConstraintLayout>