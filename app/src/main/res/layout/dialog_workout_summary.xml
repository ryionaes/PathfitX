<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODAY"
            android:textColor="#8F90A6"
            android:textSize="12sp"
            android:letterSpacing="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            app:tint="#102040"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/etWorkoutTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Workout Name"
            android:textColor="#102040"
            android:textSize="24sp"
            android:textStyle="bold"
            android:background="@null"
            android:inputType="textCapWords"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDateLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivEditIcon"/>

        <TextView
            android:id="@+id/tvWorkoutTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Workout Name"
            android:textColor="#102040"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDateLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivEditIcon"/>

        <ImageView
            android:id="@+id/ivEditIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="#8F90A6"
            app:layout_constraintEnd_toStartOf="@+id/btnClose"
            app:layout_constraintTop_toTopOf="@+id/etWorkoutTitle"
            app:layout_constraintBottom_toBottomOf="@+id/etWorkoutTitle"
            android:layout_marginEnd="16dp"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="etWorkoutTitle,tvWorkoutTitle" />

        <LinearLayout
            android:id="@+id/statsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/barrierTitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_card_goals"
                android:backgroundTint="#F8F9FA"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/iconDuration"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android_src="@drawable/ic_progress"
                    app:tint="#FF5252"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvDurationValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 min"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#102040"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/iconDuration"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textSize="12sp"
                    android:textColor="#8F90A6"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDurationValue"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_card_goals"
                android:backgroundTint="#F8F9FA"
                android:padding="16dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/iconVolume"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_workout"
                    app:tint="#102040"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvVolumeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 kg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#102040"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/iconVolume"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume"
                    android:textSize="12sp"
                    android:textColor="#8F90A6"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvVolumeValue"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F2"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/statsRow"/>

        <TextView
            android:id="@+id/tvExercisesCompletedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercises Completed"
            android:textColor="#8F90A6"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvExercisesCompletedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#102040"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/tvExercisesCompletedLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvExercisesCompletedLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvExercisesCompletedLabel"/>

        <TextView
            android:id="@+id/tvCompletionRateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completion Rate"
            android:textColor="#8F90A6"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvCompletionRateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="#102040"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/tvCompletionRateLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvCompletionRateLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCompletionRateLabel"/>

        <TextView
            android:id="@+id/tvCaloriesBurnedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories Burned"
            android:textColor="#8F90A6"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvCaloriesBurnedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#102040"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/tvCaloriesBurnedLabel"
            app:layout_constraintBottom_toBottomOf="@+id/tvCaloriesBurnedLabel"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseSummary"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Close Summary"
            android:textColor="@android:color/white"
            android:backgroundTint="#102040"
            app:cornerRadius="12dp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCaloriesBurnedLabel"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
