<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- 1. Header Title -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 2. Search Bar -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_search_bar"
        android:hint="Search exercises (e.g. Squat)"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="12dp"
        android:drawableTint="#757575"
        android:textColor="@color/black"
        android:textColorHint="#9E9E9E"
        app:layout_constraintTop_toBottomOf="@id/tv_header"/>

    <!-- 3. Primary Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/scroll_chips_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/et_search">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_strength"
                style="@style/ChipStyle.Selected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="Strength"/>

            <Button
                android:id="@+id/btn_cardio"
                style="@style/ChipStyle.Unselected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="Cardio"/>

            <Button
                android:id="@+id/btn_hiit"
                style="@style/ChipStyle.Unselected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="HIIT"/>

            <Button
                android:id="@+id/btn_yoga"
                style="@style/ChipStyle.Unselected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Yoga"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 4. Secondary Filter Chips (for Strength) -->
    <HorizontalScrollView
        android:id="@+id/scroll_chips_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/scroll_chips_primary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_body_all"
                style="@style/ChipStyle.Selected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="All"/>

            <Button
                android:id="@+id/btn_chest"
                style="@style/ChipStyle.Unselected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="Chest"/>

            <Button
                android:id="@+id/btn_back"
                style="@style/ChipStyle.Unselected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="Back"/>

            <Button
                android:id="@+id/btn_legs"
                style="@style/ChipStyle.Unselected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="Legs"/>

            <Button
                android:id="@+id/btn_shoulders"
                style="@style/ChipStyle.Unselected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="Shoulders"/>

            <Button
                android:id="@+id/btn_arms"
                style="@style/ChipStyle.Unselected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:text="Arms"/>

            <Button
                android:id="@+id/btn_core"
                style="@style/ChipStyle.Unselected"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Core"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 5. Subheader -->
    <TextView
        android:id="@+id/tv_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Exercises"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_chips_secondary"/>

    <!-- 6. The List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_explore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_available"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>