<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- 1. Header Title -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 2. Search Bar -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_search_bar"
        android:hint="Search exercises (e.g. Squat)"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="12dp"
        android:drawableTint="#757575"
        android:textColor="@color/black"
        android:textColorHint="#9E9E9E"
        app:layout_constraintTop_toBottomOf="@id/tv_header"/>

    <!-- 3. Primary Filter Chips -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/scroll_chips_primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#eeeeef"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/chipGroupCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="4dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_all"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="All"
                android:textAlignment="center"
                android:textColor="@drawable/selector_chip_text"
                app:chipBackgroundColor="@drawable/selector_chip_bg"
                app:chipCornerRadius="28dp"
                app:chipStrokeWidth="0dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_muscle"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="By Muscle"
                android:textAlignment="center"
                android:textColor="@drawable/selector_chip_text"
                app:chipBackgroundColor="@drawable/selector_chip_bg"
                app:chipCornerRadius="28dp"
                app:chipStrokeWidth="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_goals"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="By Goals"
                android:textAlignment="center"
                android:textColor="@drawable/selector_chip_text"
                app:chipBackgroundColor="@drawable/selector_chip_bg"
                app:chipCornerRadius="28dp"
                app:chipStrokeWidth="0dp"
                android:layout_marginEnd="4dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 4. Secondary Filter Chips -->
    <HorizontalScrollView
        android:id="@+id/scroll_chips_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:scrollbars="none"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/scroll_chips_primary">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:chipSpacingHorizontal="8dp"
            app:singleSelection="true">
            <!-- Dynamic Chips will be added here -->
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- 5. Subheader -->
    <TextView
        android:id="@+id/tv_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available Exercises"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_chips_secondary"/>

    <!-- 6. The List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_explore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_available"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
