<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- LAYER 1: The Blurred Shadow -->
    <item android:gravity="top" android:height="15dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFE0E0"
                android:endColor="@android:color/transparent"
                android:angle="90" />
        </shape>
    </item>

    <!-- LAYER 2: The Actual White Background -->
    <item android:top="6dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

</layer-list>
